<%= form_for (@product) do |f| %>

<% if @errors %>
  <div class="error_messages">
    <ul>
      <% @errors.each do |error| %>
      <li style="color:red; font-size:25px;"><%= error %></li>
      <% error %>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="row">

  <div class="col-md-6">
    <div class="form-group">

      <%= f.text_field :name, placeholder: "Nombre del Producto", class: "form-control" %>
      <%= f.text_field :price, placeholder: "Precio del Producto", class: "form-control" %>
      <%= f.date_field :date_product, as: :date, value: f.object.try(:strftime, "%m/%d/%Y"), class: "form-control" %>

    </div>
  </div>

</div>

<div class="row">
  <div class="col-md">
    <div class="form-group">
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>
    </div>
    <div class="form-group">
      <%= f.collection_select(:purchase_id, Purchase.all, :id, :name_purchases) %>
    </div>
  </div>
</div>


  <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>

<% end %>
